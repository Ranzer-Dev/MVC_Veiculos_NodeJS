<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Carros</h1>
    <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Linha</th>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
          </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < vehicle.length; i++) { %>
                <tr>            
                    <th scope="row"><%= i+1 %></th>
                    <td><%= vehicle[i].id %></td>
                    <td><%= vehicle[i].nome %></td>
                    <td><a href="/delete/<%= vehicle[i].id %>" onclick="return confirm('você quer mesmo deletar esse carro?');">deletar</a></td>               
                    <td><a href="/editar/<%= vehicle[i].id %>" >editar</a></td>
                  </tr> 
              <% } %>
        </tbody>
      </table>
      
      <button id="toggleFormButton" class="btn btn-success">Cadastrar Veículo</button>
      
      <div id="addFormContainer" style="display:none; border: 1px solid #ccc; padding: 15px; margin-top: 10px;">
          <%-include('addView.ejs');%>
      </div>
      
      <p><% if(saved){ %> <%-include('carroAddView.ejs');%> <% } %></p>
      
      <script>
          document.addEventListener('DOMContentLoaded', function() {
              const button = document.getElementById('toggleFormButton');
              const formContainer = document.getElementById('addFormContainer');
              
              button.addEventListener('click', function() {
                  if (formContainer.style.display === 'none') {
                      formContainer.style.display = 'block';
                      button.textContent = 'Esconder Formulário';
                  } else {
                      formContainer.style.display = 'none';
                      button.textContent = 'Cadastrar Veículo';
                  }
              });
          });
      </script>

</body>
</html>